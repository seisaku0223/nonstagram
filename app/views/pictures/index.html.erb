<div class="container-fruid">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <p><%= notice %></p>
    <h1>投稿画像一覧</h1>
    <%= link_to "画像を投稿する", new_picture_path, class: 'btn btn-default' %>
    <% @pictures.each do |picture| %>
      <div class="row">
        <%= image_tag(picture.picture_url) if picture.picture.present? %>
        <p><strong>コメント</strong></p>
        <p><%= picture.comment %></p>
        <%= link_to "編集", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", picture_path(picture.id), method: :delete, data: {confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
